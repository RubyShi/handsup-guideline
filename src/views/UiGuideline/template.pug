      is="DialogLg"
      v-if="SampleDialogVisibleLG"
      :dialogVisible.sync="SampleDialogVisibleLG"
    )

    //- 無標頭標尾跳窗
    component(
      is="DialogClear"
      v-if="SampleDialogVisibleClear"
      :dialogVisible.sync="SampleDialogVisibleClear"
    )

    //- 我是長文章跳窗
    component(
      is="DialogLong"
      v-if="SampleDialogVisibleLong"
      :dialogVisible.sync="SampleDialogVisibleLong"
    )

    //- 無遮罩
    component(
      is="DialogHiddenMask"
      v-if="SampleDialogVisibleMask"
      :dialogVisible.sync="SampleDialogVisibleMask"
    )

    //- 不可點Ｍodal關閉
    component(
      is="DialogNotAllowClickModal"
      v-if="SampleDialogVisibleModal"
      :dialogVisible.sync="SampleDialogVisibleModal"
    )

    //- 無叉叉
    component(
      is="DialogHiddenClose"
      v-if="SampleDialogVisibleClose"
      :dialogVisible.sync="SampleDialogVisibleClose"
    )
